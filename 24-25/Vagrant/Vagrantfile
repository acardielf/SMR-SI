# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.define "rojo" do |rojo|
    rojo.vm.box = "ubuntu/bionic64"
    rojo.vm.hostname = "rojo"
    rojo.vm.provision "shell", inline: <<-SHELL
      useradd -m -s /bin/bash user
      echo "user:user" | chpasswd
    SHELL
  
    rojo.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update
      sudo apt install sshd -y
      echo "PasswordAuthentication yes" | sudo tee -a /etc/ssh/sshd_config
      echo "PermitRootLogin yes" | sudo tee -a /etc/ssh/sshd_config
      sudo systemctl restart sshd      
    SHELL
  end

  config.vm.define "verde" do |verde|
    verde.vm.box = "ubuntu/bionic64"
    verde.vm.hostname = "verde"
  
    verde.vm.provision "shell", inline: <<-SHELL
      useradd -m -s /bin/bash user
      echo "user:user" | chpasswd
    SHELL
  
    verde.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update
      sudo apt install sshd -y
      echo "PasswordAuthentication yes" | sudo tee -a /etc/ssh/sshd_config
      echo "PermitRootLogin yes" | sudo tee -a /etc/ssh/sshd_config
      sudo systemctl restart sshd      
    SHELL
  end

  config.vm.define "azul" do |exdb|
    azul.vm.box = "ubuntu/bionic64"
    azul.vm.hostname = "azul"  
  
    azul.vm.provision "shell", inline: <<-SHELL
      useradd -m -s /bin/bash user
      echo "user:user" | chpasswd
    SHELL
  
    azul.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update
      sudo apt install sshd -y
      echo "PasswordAuthentication yes" | sudo tee -a /etc/ssh/sshd_config
      echo "PermitRootLogin yes" | sudo tee -a /etc/ssh/sshd_config
      sudo systemctl restart sshd      
    SHELL
  end 
    
end
